<script src='https://cdn.mathjax.org/mathjax/latest/MathJax.js?config=TeX-AMS-MML_HTMLorMML'></script>
<h2>problem filename</h2>
<p><%= @problem.filename %></p>
<h3>problem statement</h3>
<p><%== @problem.text %></p>

<h2>answer interface</h2>
<p><%== @answer.interface %></p>
<h3>answers</h3>
<p><%= @answer.values %></p>

<% x = 0 %>
<% @solutions.each do |solution| %>
  <h2>solution statement</h2>
  <p><%= solution.typ %></p>
  <p><%== solution.text %></p>
  <h3>hint statement(s) for solution</h3>
  <% @hints[x].each do |hint| %>
    <h4>a hint</h4>
    <p><%== hint.text %></p>
  <% end %>
  <% x+=1 %>
<% end %>

<h2>metadata</h2>
<h4>category</h4>
<%= @metadata.category %>
<h4>context</h4>
<%= @metadata.context %>
<h4>difficulty</h4>
<%= @metadata.diff %>
<h4>source</h4>
<%= @metadata.source %>
