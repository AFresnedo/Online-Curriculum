<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <nav>
      <%= link_to "Math Affirm", root_path, id: "logo" %>
      <ul class="nav navbar-nav navbar-right">
        <%# user account menu %>
        <% if logged_in %>
          <% if is_teacher %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Tools <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                  <li><%= link_to "Dir Sorted", curricula_path %></li>
                  <li class="divider"></li>
                  <li><%= link_to "Just Files", curriculum_edit_path %></li>
              </ul>
            </li>
          <% end %>
          <li><%= link_to "Curriculum", start_path %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Account <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <% url = edit_user_path(current_user) %>
              <li><%= link_to "Edit Account", url %></li>
              <% url = user_path(current_user) %>
              <li><%= link_to "View Activity", url %></li>
              <li class="divider"></li>
              <%# admin only %>
              <% if is_teacher %>
                <li><%= link_to "View Users", users_path %></li>
                <li class="divider"></li>
              <% end %>
              <%# all users %>
              <li>
                <%= link_to "Log out", logout_path, method: "delete" %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "Getting Started", '#' %></li>
          <li><%= link_to "Log in", login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
