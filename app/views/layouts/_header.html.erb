<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "Math Affirm", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <%# user account menu %>
        <% if logged_in? %>
          <li><%= link_to "Curriculum", '#' %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Account <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Activity", '#' %></li>
              <li><%= link_to "Subscriptions", '#' %></li>
              <li class="divider"></li>
              <%# admin only %>
              <% if current_user.admin? %>
                <li><%= link_to "Users", '#' %></li>
                <li><%= link_to "Curriculum", '#' %></li>
                <li class="divider"></li>
              <% end %>
              <%# all users %>
              <li>
                <%= link_to "Log out", '#', method: "delete" %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "Getting Started", '#' %></li>
          <li><%= link_to "Log in", '#' %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
